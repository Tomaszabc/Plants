<div class="text-center">
  <h2 class="text-center mt-2">Plants to water:</h2>
  <% if plants_needing_watering.any? %>
    <ul class="grid max-w-[26rem] sm:max-w-[52.5rem] mt-16 sm:mt-20 md:mt-20 grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 mx-auto gap-6 lg:gap-y-8 xl:gap-x-8 lg:max-w-7xl px-4 sm:px-6 lg:px-8">
      <% plants_needing_watering.each do |plant| %>
        <%= render plant %>
      <% end %>
    </ul>
  <% else %>
    <div class= "text-sm">
      <%= "No plants to water today"%>
    </div>
    <% end %>
</div>