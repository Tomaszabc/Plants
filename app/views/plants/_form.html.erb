<%= form_with(model: plant, local: true, class: "space-y-6 ") do |form| %>
  <% if plant.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold"><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</strong>
      <ul class="list-disc list-inside">
        <% plant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="flex flex-col ">
    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex flex-col ">
    <%= form.label :note, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :note, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex flex-col ">
    <%= form.label :light_requirements, "Light Requirements", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <% Plant.light_requirements.keys.each do |key| %>
      <div class="flex items-center mb-2">
        <%= form.radio_button :light_requirements, key, class: "mr-2" %>
        <%= form.label :light_requirements, key.humanize, value: key, class: "text-gray-700 text-sm" %>
      </div>
    <% end %>
  </div>

  <div class="flex flex-col ">
    <%= form.label :water_needs, "Water needs:", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <% Plant.water_needs.keys.each do |key| %>
      <div class="flex items-center mb-2">
        <%= form.radio_button :water_needs, key, class: "mr-2" %>
        <%= form.label :water_needs, key.humanize, value: key, class: "text-gray-700 text-sm" %>
      </div>
    <% end %>
  </div>

  <div class="flex flex-col ">
    <%= form.label :fertilization_needs, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :fertilization_needs, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex flex-col ">
    <%= form.label :toxicity, "Toxicity", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <% Plant.toxicity.keys.each do |key| %>
      <div class="flex items-center mb-2">
        <%= form.radio_button :toxicity, key, class: "mr-2" %>
        <%= form.label :toxicity, key.humanize, value: key, class: "text-gray-700 text-sm" %>
      </div>
    <% end %>
  </div>


<div class="flex flex-col ">
  <%= form.label :date_acquired, "Date Acquired", class: "block text-gray-700 text-sm font-bold mb-2" %>
  <%= form.date_field :date_acquired, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
</div>


  <div class="flex flex-col">
    <%= form.label :plant_image, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.file_field :plant_image, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div>
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>