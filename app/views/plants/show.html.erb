<p style="color: green; text-align: center; margin-top: 10px;"><%= notice %></p>

<div class="plant-details">
  <%= render @plant %>
</div>

<div class="actions-bar">
  <%= link_to "Edit this plant", edit_plant_path(@plant), class: "btn btn-secondary" %> |
  <%= link_to "Back to plants", plants_path, class: "btn btn-secondary" %>
</div>

<div class="water-plant my-4">
  <%= button_to water_plant_path(@plant), method: :post, class: "btn btn-water" do %>
    <div class="flex z-5 text-3xl hover:shadow-md">ðŸ’§</div>
  <% end %>
</div>

<div class="set-reminder my-4">
  <%= link_to 'Set watering reminder', new_plant_water_reminder_path(@plant), class: "btn btn-primary" %>
</div>

<div class="text-center m-10">
  <h3 class="text-lg font-bold">Watering log:</h3>
  <% if @plant.watering_logs.exists? %>
    <% @plant.watering_logs.order(created_at: :asc).each_with_index do |watering_log, index| %>
      <div class="mt-2"><%= index + 1 %>. <%= watering_log.created_at %></div>
    <% end %>
  <% else %>
    <p>No watering logs available.</p>
  <% end %>
</div>

<div class="add-watering-log my-4">
  <h3 class="text-lg font-bold">Add watering log from date:</h3>
  <%= form_with(model: [@plant, WateringLog.new], local: true, class: "form-inline") do |form| %>
    <div class="field mb-4">
      <%= form.label :created_at, "Watering date and time", class: "block text-sm font-medium text-gray-700" %>
      <%= form.datetime_local_field :created_at, class: "form-control mt-1 block w-full" %>
    </div>
    <div class="actions">
      <%= form.submit "Add watering Log", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="text-center m-10">
  <h3 class="text-lg font-bold">Watering Reminder</h3>
  <p>
    Every <%= @plant.watering_reminder&.quantity %> <%= @plant.watering_reminder&.unit %>
  </p>
  <p>
    Next reminder: <%= @plant.next_watering || 'No watering information' %>
  </p>
</div>

<div class="text-center my-4">
  <%= button_to "Destroy this plant", @plant, method: :delete, data: { confirm: "Are you sure you want to destroy this plant?" }, class: "btn btn-danger" %>
</div>
