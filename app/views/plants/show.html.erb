<p style="color: green"><%= notice %></p>

<%= render @plant %>

<div>
  <%= link_to "Edit this plant", edit_plant_path(@plant) %> |
  <%= link_to "Back to plants", plants_path %>

  <%= button_to "Destroy this plant", @plant, method: :delete %>
</div>

<%= button_to water_plant_path(@plant), method: :post do  %>
        <div class="flex z-5 text-3xl hover:shadow-md">ðŸ’§</div>
      <% end %>

<%= link_to 'Set watering reminder', new_plant_water_reminder_path(@plant) %>

<div class="text-center m-10">
  Watering log:
</div>
<div class="text-center m-10">
  <% @plant.watering_logs.order(created_at: :asc).each_with_index do |watering_log, index| %>
    <div><%= index + 1 %>.  <%= watering_log.created_at %></div>
  <% end %>
</div>

Add watering log from date:
<%= form_with(model: [@plant, @plant.watering_logs.build], local:true) do |form| %>
  <div class="field">
    <%= form.label :created_at, "Watering date and time" %>
    <%= form.datetime_local_field :created_at, class: "form_control" %>
  </div>

  <div class="actions">
    <%= form.submit "Add watering Log", class: "btn btn-primary" %>
  </div>
<% end %>


<div class="text-center m-10">
  Watering Reminder Every
  <%= @plant.watering_reminder&.quantity %>
  <%= @plant.watering_reminder&.unit %>
  <br>
  Next reminder:
  <%= @plant.next_watering || 'Brak informacji o podlaniu' %>
</div>