<p style="color: green"><%= notice %></p>

<%= render @plant %>

<div>
  <%= link_to "Edit this plant", edit_plant_path(@plant) %> |
  <%= link_to "Back to plants", plants_path %>

  <%= button_to "Destroy this plant", @plant, method: :delete %>
</div>

<div class="text-center m-10">
  Watering log:
</div>
<div class="text-center m-10">
  <% @plant.watering_logs.each do |watering_log| %>
    <%= watering_log.created_at %>
  <% end %>
</div>
