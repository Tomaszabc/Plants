<% if @plants.present? %>

  <%= render partial: 'watering_list', locals: { plants_needing_watering: @plants_needing_watering } %>

  <h1 class="text-center mt-14">All plants:</h1>
    <ul class="grid max-w-[26rem] sm:max-w-[52.5rem] mt-16 sm:mt-20 md:mt-20 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 mx-auto gap-6 lg:gap-y-8 xl:gap-x-8 lg:max-w-7xl px-4 sm:px-6 lg:px-8">
    <%= render @plants %>
    </ul>

  <div class="flex justify-center m-10">
    <%= link_to "New plant", new_plant_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %> 
  </div>

<% else%>

<div class="flex justify-center">
  <%= image_tag( "empty_pots.png", size: "400") %>
</div>
<p class="text-xl flex justify-center">You don't have any plants yet</p>

<div class="flex justify-center m-10">
    <%= link_to "Create your first plant", new_plant_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %> 
  </div>
<% end %>