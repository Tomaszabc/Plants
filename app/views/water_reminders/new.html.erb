<%= form_with(model: @watering_reminder, url: plant_water_reminders_path(plant: @plant) , local: true ) do |form|%>
  <div>
    <%= form.label :quantity, "ilość:" %>
    <%= form.number_field :quantity %>
  </div>
  <div>
    <%= form.label :unit, "Jednostka" %>
    <%= form.select :unit, options_for_select([['Dni', 'days'], ['Tygodnie', 'weeks']]) %>
    </div>
  <%= form.submit "Utwórz przypomnienie" %>
<% end %>