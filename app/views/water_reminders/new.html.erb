<%= form_with(model: @watering_reminder, url: plant_water_reminders_path(plant: @plant), local: true) do |form| %>
  <div class="m-14">
    <%= form.label :quantity, "Ilość:", class: "block text-gray-700 font-bold mb-2 " %>
    <%= form.number_field :quantity, class: "shadow appearance-none border rounded w-32 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="m-14">
    <%= form.label :unit, "Jednostka", class: "block text-gray-700 font-bold mb-2" %>
    <%= form.select :unit, options_for_select([['Dni', 'days'], ['Tygodnie', 'weeks']]), {}, class: "shadow appearance-none border rounded w-32 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div>
    <%= form.submit "Utwórz przypomnienie", class: " m-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
